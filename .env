###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=
APP_SHARE_DIR=var/share
###> symfony/routing ###
DEFAULT_URI=http://localhost:8080
###> database ###
DATABASE_URL="mysql://root:@db:3306/lytvynov_crypto?serverVersion=8.0&charset=utf8mb4"
###> portfolio & binance (all project variables — only in .env) ###
PORTFOLIO_BTC=1
PORTFOLIO_ETH=10
PORTFOLIO_SOL=50
PORTFOLIO_USDT=5000
BINANCE_API_BASE_URL=https://api.binance.com
BINANCE_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Snapshot granularity: hour | minute (one record per minute) | second (test).
PORTFOLIO_SNAPSHOT_GRANULARITY=minute

# Cron in container: snapshot every N minutes. 1 = every minute, 60 = hourly.
CRON_SNAPSHOT_MINUTES=1

# Max hours for ?hours= (guard against heavy queries)
PORTFOLIO_HISTORY_MAX_HOURS=720
# Default hours on main page (use 1–2 for quick check)
PORTFOLIO_HISTORY_DEFAULT_HOURS=2

# Hub URL for publishing from backend (from app container — mercure:80)
MERCURE_URL=http://mercure:80/.well-known/mercure
# Public hub URL for browser subscription (port 3000 exposed from mercure container)
MERCURE_PUBLIC_URL=http://localhost:3000/.well-known/mercure
# JWT signing secret (same key in mercure container: MERCURE_PUBLISHER_JWT_KEY, MERCURE_SUBSCRIBER_JWT_KEY)
MERCURE_JWT_SECRET=!ChangeMe!

